<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_challenge_finally"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.fu_berlin.inf.mfm235.xswipin.ChallengeFinallyActivity"
    android:background="@android:color/holo_green_dark">

    <TextView
        android:text="prepare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewPrepare" />

    <TextView
        android:text="entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPrepare"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewEntry" />

    <TextView
        android:text="tries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEntry"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewTries" />

    <Button
        android:text="Save results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button3"
        android:onClick="doSave"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTries"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewTotal" />
</RelativeLayout>
