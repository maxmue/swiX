<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_pre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.fu_berlin.inf.mfm235.xswipin.GamePreActivity"
    android:background="@android:color/holo_orange_dark">

    <Button
        android:text="N, S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button5"
        android:onClick="doNS"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="E, W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true"
        android:id="@+id/button6"
        android:onClick="doEW"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="N, E, S, W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true"
        android:id="@+id/button7"
        android:layout_alignParentEnd="true"
        android:onClick="doComplex" />

    <Button
        android:text="10 on 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:id="@+id/button9"
        android:layout_alignParentEnd="true"
        android:onClick="doTenOnTen" />
</RelativeLayout>
